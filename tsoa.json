{
    "entryFile": "./src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "routes": {
        "basePath": "/api/v1",
        "routesDir": "./src/",
        "controllerPathGlobs": [
            "./**/**/*.controller.ts"
        ]
    },
    "spec": {
        "outputDirectory": "./dist",
        "host": "localhost:3000",
        "specVersion": 2,
        "securityDefinitions": {
            "api_key": {
                "type": "apiKey",
                "name": "access_token",
                "in": "query"
            },
            "tsoa_auth": {
                "type": "oauth2",
                "authorizationUrl": "http://swagger.io/api/oauth/dialog",
                "flow": "implicit",
                "scopes": {
                    "write:pets": "modify things",
                    "read:pets": "read things"
                }
            }
        }
    },
    "ignore": [
        "**/node_modules/**"
    ]
}